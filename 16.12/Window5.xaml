<Window x:Class="_16._12.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_16._12"
        mc:Ignorable="d"
        Title="Window5" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Первое число:" Margin="10"/>
        <TextBox x:Name="textBox1" Grid.Row="0" HorizontalAlignment="Right" Width="100" Margin="10"/>

        <TextBlock Text="Второе число:" Margin="10" Grid.Row="1"/>
        <TextBox x:Name="textBox2" Grid.Row="1" HorizontalAlignment="Right" Width="100" Margin="10"/>

        <Button Content="Сложить" Grid.Row="2" HorizontalAlignment="Center" Margin="10" Click="Button_Click"/>
    </Grid>
</Window>
